{
  // Disable telemetry
  "telemetry.telemetryLevel": "off",

  // Workbench settings
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.enablePreview": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#282828",
    "statusBar.foreground": "#aaa",
    "statusBar.noFolderBackground": "#212121",
    "statusBar.debuggingBackground": "#263238"
  },

  // Editor and font settings
  "editor.letterSpacing": -0.9,
  "editor.fontSize": 13.5,
  "editor.lineHeight": 20,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 88],
  "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,

  // Highlight bracket pairs
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,

  // Remove trailing spaces
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Disable italic font for comments in code
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "variable.language.this.ts",
          "punctuation.definition.block.tag.jsdoc",
          "variable.language.special.self.python",
          "variable.parameter.function.language.special.self.python",
          "comment",
          "storage.type",
          "variable.parameter",
          "constant",
          "parameters variable.function",
          "support.type",
          "storage.modifier",
          "entity.other.inherited-class",
          "entity.other.attribute-name"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  // Ignore certain diretories in the sidebar explorer
  "files.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/__pycache__": true
  },
  "explorer.autoReveal": true,

  // Ignore certain diretories in search
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/tmp": true,
    "**/dist": true,
    "**/build": true,
    "**/__pycache__": true
  },

  // Terminal
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.scrollback": 2000,

  // Python settings
  "python.venvPath": "/home/jonmd/.venv",
  "[python]": {
    "editor.wordBasedSuggestions": false,
    "editor.tabSize": 4
  },
  "python.terminal.activateEnvInCurrentTerminal": false,
  "python.terminal.activateEnvironment": false,

  // Workbench settings
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.startupEditor": "none",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },

  // JSON settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Disable Telemtry sent to Red Hat
  "redhat.telemetry.enabled": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "â€“": true
  },

  // Various workbench stuff
  "window.menuBarVisibility": "toggle",
  "workbench.activityBar.visible": false
}
